{
	"name": "terraform-advanced-syntax-highlighting",
	"displayName": "Terraform Advanced Syntax Highlighting",
	"description": "Extends the wonderful Terraform VS Code extension by mauve, and adds in advanced syntax highlighting support for Terraform files.",
	"version": "0.0.1",
	"publisher": "Patrick Miravalle",
	"engines": {
		"vscode": "^1.39.0"
	},
	"categories": [
		"Programming Languages"
	],
	"repository": {
		"type": "git",
		"url": "https://gitlab.com/pjmiravalle/vscode-terraform-advanced-syntax-highlighting"
	},
	"contributes": {
		"grammars": [
			{
				"injectTo": [
					"source.terraform"
				],
				"scopeName": "source.terraform.interpolation.injection",
				"path": "./syntaxes/terraform.interpolation.injection.json"
			},
			{
				"injectTo": [
					"source.terraform"
				],
				"scopeName": "source.terraform.string.injection",
				"path": "./syntaxes/terraform.string.injection.json"
			},
			{
				"injectTo": [
					"source.terraform"
				],
				"scopeName": "source.terraform.heredoc.injection",
				"path": "./syntaxes/terraform.heredoc.injection.json"
			}
		]
	}
}